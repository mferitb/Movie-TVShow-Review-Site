@model WebApplication1.Models.ViewModels.LoginViewModel

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log In</title>
    <link rel="stylesheet" href="~/css/login.css">
</head>


<h2>Log In</h2>

<form asp-action="Login" method="post" class="auth-form">
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" id="Email" asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" id="Password" asp-for="Password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
</form>

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@ViewData["ErrorMessage"]</div>
}
